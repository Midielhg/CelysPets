# Environment Variables Template for Production
# Copy this file to .env and fill in your actual values
# NEVER commit the actual .env file to Git!

# MongoDB Configuration
# Get this from your MongoDB Atlas cluster
MONGODB_URI=mongodb+srv://USERNAME:PASSWORD@CLUSTER_URL/DATABASE_NAME?retryWrites=true&w=majority&appName=Cluster0

# JWT Configuration  
# Generate a strong secret key (32+ characters recommended)
# You can use: openssl rand -hex 32
JWT_SECRET=your-super-secret-jwt-key-minimum-32-characters-long

# Server Configuration
PORT=3001
NODE_ENV=production

# Google Maps API (for route optimization)
# Get this from Google Cloud Console
GOOGLE_MAPS_API_KEY=your-google-maps-api-key-here

# Additional Production Variables
CORS_ORIGIN=https://your-domain.com
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100
